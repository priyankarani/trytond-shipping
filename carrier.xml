<?xml version="1.0"?>
<tryton>
  <data>

      <record model="ir.ui.view" id="party_configuration_view_form">
          <field name="model">party.configuration</field>
          <field name="type">form</field>
          <field name="inherit" ref="party.party_configuration_view_form"/>
          <field name="name">party_configuration_form</field>
      </record>

      <record model="ir.ui.view" id="carrier_view_form">
          <field name="model">carrier</field>
          <field name="type">form</field>
          <field name="inherit" ref="carrier.carrier_view_form" />
          <field name="name">carrier_form</field>
      </record>

      <!-- Carrier Service -->
      <record model="ir.ui.view" id="carrier_service_view_form">
          <field name="model">carrier.service</field>
          <field name="type">form</field>
          <field name="name">carrier_service_form</field>
      </record>
      <record model="ir.ui.view" id="carrier_service_view_tree">
          <field name="model">carrier.service</field>
          <field name="type">tree</field>
          <field name="name">carrier_service_tree</field>
      </record>
      <record model="ir.action.act_window" id="act_carrier_service">
          <field name="name">Carrier Service</field>
          <field name="res_model">carrier.service</field>
          <field name="context">{'active_test': False}</field>
      </record>
      <record model="ir.action.act_window.view" id="act_carrier_service_view1">
          <field name="sequence" eval="10"/>
          <field name="view" ref="carrier_service_view_tree"/>
          <field name="act_window" ref="act_carrier_service"/>
      </record>
      <record model="ir.action.act_window.view" id="act_carrier_service_view2">
          <field name="sequence" eval="20"/>
          <field name="view" ref="carrier_service_view_form"/>
          <field name="act_window" ref="act_carrier_service"/>
      </record>
      <menuitem parent="stock.menu_configuration" id="menu_carrier_service"
          action="act_carrier_service" sequence="5" icon="tryton-list"/>

      <record model="ir.action.act_window.domain" id="act_carrier_service_active">
            <field name="name">Active</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('active', '=', True)]</field>
            <field name="act_window" ref="act_carrier_service"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_carrier_service_disabled">
            <field name="name">Disabled</field>
            <field name="sequence" eval="20"/>
            <field name="domain">[('active', '=', False)]</field>
            <field name="act_window" ref="act_carrier_service"/>
        </record>

  </data>
</tryton>
